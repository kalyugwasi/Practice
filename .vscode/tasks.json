{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Normal C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\.bin\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "label": "Run Normal C++",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}\\.bin\\${fileBasenameNoExtension}.exe"
            ],
            "dependsOn": "Build Normal C++",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Build Graphics C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\.bin\\${fileBasenameNoExtension}.exe",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "label": "Run Graphics C++",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "start",
                "${workspaceFolder}\\.bin\\${fileBasenameNoExtension}.exe"
            ],
            "dependsOn": "Build Graphics C++",
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
    ]
}