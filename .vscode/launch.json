{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run C++ Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\.bin\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe",
            "preLaunchTask": "${input:chooseBuild}"
        }
    ],
    "inputs": [
        {
            "id": "chooseBuild",
            "type": "pickString",
            "description": "Choose build type",
            "options": [
                "Build Normal C++",
                "Build Graphics C++"
            ]
        }
    ]
}
